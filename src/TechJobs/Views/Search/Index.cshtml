<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key" 
                       checked="@column.Key == 'all''"/>
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>
    
        @foreach (var job in ViewBag.jobs)
        {
            <table class="job-listing">
                <tbody>
                    <tr>
                        <td>name</td>
                        <td>@ViewBag.jobs.name</td>
                    </tr>
                    <tr>
                        <td>employer</td>
                        <td>@ViewBag.jobs.employer</td>
                    </tr>
                    <tr>
                        <td>location</td>
                        <td>@ViewBag.jobs.location</td>
                    </tr>
                    <tr>
                        <td>position type</td>
                        <td>@ViewBag.jobs.positiontype</td>
                    </tr>
                    <tr>
                        <td>core competency</td>
                        <td>@ViewBag.jobs.corecompetency</td>
                    </tr>
                </tbody>
            </table>

        }
    
    // TODO #2 - Loop over jobs dictionary and display all job fields for
}